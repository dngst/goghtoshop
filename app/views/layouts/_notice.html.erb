<% if alert.present? %>
  <p class="py-2 px-3 bg-red-50 mb-2 text-red-500 font-medium rounded-lg inline-block" data-controller="auto-remove-message"><%= alert %></p>
<% end %>

<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-2 text-green-500 font-medium rounded-lg inline-block" data-controller="auto-remove-message"><%= notice %></p>
<% end %>
