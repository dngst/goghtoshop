<div class="max-w-md">
  <h2 class="text-4xl font-bold mb-4">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block font-semibold text-gray-800" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded-lg border-gray-300 mt-2 focus:outline-none focus:ring-primary" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block font-semibold text-gray-800" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border rounded-lg border-gray-300 mt-2 focus:outline-none focus:ring-primary" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4">
        <%= f.check_box :remember_me, class: "mr-2 border rounded-lg text-primary hover:cursor-pointer focus:outline-none focus:border-primary focus:ring-transparent", checked: true %>
        <%= f.label :remember_me, class: "text-gray-800" %>
      </div>
    <% end %>

    <div class="mt-4">
      <%= f.submit "Log in", class: "bg-primary text-white px-4 py-2 rounded hover:cursor-pointer" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
