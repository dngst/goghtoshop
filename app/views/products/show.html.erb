<div class="md:w-2/3 w-full">
  <%= link_to sanitize('&larr; Back to products'), 'javascript:history.back()', class: "text-gray-600" %>

  <div>
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @product %>

    <%= link_to "Purchase", checkout_path(id: @product), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
